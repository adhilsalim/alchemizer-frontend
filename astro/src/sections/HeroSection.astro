---
import ButtonPrimary from "../components/buttons/ButtonPrimary.astro";
const { title, description, image } = Astro.props;
---

<div class="hero-main">
  <div class="container">
    <div class="row justify-content-between align-items-center">
      <div class="col-md-6">
        <h1 class="hero-title">{title}</h1>
        <p>
          {description}
        </p>
        <br />
        <ButtonPrimary
          text="Open Studio"
          textClass="hero-button-text"
          icon="backup"
          iconClass="hero-button-icon"
          buttonClass="hero-button"
          id="btn-primary-hero"
          data-bs-toggle="modal"
          data-bs-target="#fullScreenModal"
        />
      </div>
      <div class="col-md-6">
        <img src={image} alt="Video Editor" class="img-fluid" />
      </div>
    </div>
  </div>
</div>
